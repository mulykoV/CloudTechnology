@model Volt.Models.Electronic

@{
    ViewData["Title"] = "EditElectronic";
}

<h1>EditElectronic</h1>

<h4>Electronic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditElectronic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ElectronicId" />
            <div class="form-group">
                <label asp-for="ElectronicClassId" class="control-label"></label>
                <select asp-for="ElectronicClassId" asp-items="@ViewBag.ElectronicClasses" class="form-control"></select>
                <span asp-validation-for="ElectronicClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-control"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Characteristic" class="control-label"></label>
                <input asp-for="Characteristic" class="form-control" />
                <span asp-validation-for="Characteristic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoOfElectronic" class="control-label"></label>
                <input asp-for="PhotoOfElectronic" class="form-control" />
                <span asp-validation-for="PhotoOfElectronic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "Home")">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}